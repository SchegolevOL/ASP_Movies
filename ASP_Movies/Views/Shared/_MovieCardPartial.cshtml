@model Movie

<div class="card">
	<div class="img-container">
		<div class="img-blur" style="background-image: url(@Model.Poster)"></div>
		<img src="@Model.Poster" @*прослушка события error->*@ onerror="event.target.src='/images/no-image.png'" class="card-img-top" alt="...">
	</div>
	
	<circle-link></circle-link>
	<div class="card-body">
		<h5 class="card-title">@Model.Title</h5>
		<p class="card-text">@Model.Year</p>
		@if (Model.Plot == null)
		{

			<a class="btn btn-primary"
			   asp-controller="Home"
			   asp-action="Detail"
			   asp-route-id="@Model.imdbID">
				Detail
			</a>
		}
		else
		{
			<circle-link procent="@Model.Ratings[1].Value"></circle-link>
		}
	</div>
</div>
